@model ProjectMaster.Application.Models.ClassificacaoModel
<h1>Manutenção de Classificação Operações</h1>
<script src="@Url.Content("~/Scripts/MeusScripts/paginas/classificacao/novo.js")" type="text/javascript"></script>
@using (Html.BeginForm("", "", FormMethod.Post, new { @id = "formClassificacao" }))
{
    @Html.Hidden("id_classificacao", Model == null ? 0 : Model.id_classificacao, "id_classificacao")
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Classificação Operações</legend>

        <div class="editor-field">
            @Html.LabelFor(model => model.ds_codigo)
            @Html.EditorFor(model => model.ds_codigo)
            @Html.ValidationMessageFor(model => model.ds_codigo)
        </div>
        <div class="editor-field">
            @Html.LabelFor(model => model.ds_descricao)
            @Html.EditorFor(model => model.ds_descricao)
            @Html.ValidationMessageFor(model => model.ds_descricao)
        </div>
        <br />
        <p>
            <input type="button" id="btnSalvar" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para pesquisa", "Procurar")
</div>
