@{
    List<ProjectMaster.Core.ToolBarButton> buttons = (List<ProjectMaster.Core.ToolBarButton>)Model;
}
<div id="tool_bar">
    @if (buttons != null)
    {
        foreach (var m in buttons)
        {
            string scr = string.Empty;

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.CadastrarNovo)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/novo.png"); } else { scr = Url.Content("~/Content/images/buttons/novo_false.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.Editar)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/editar.png"); } else { scr = Url.Content("~/Content/images/buttons/editar_false.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.Excluir)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/excluir.png"); } else { scr = Url.Content("~/Content/images/buttons/excluir_false.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.Gravar)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/gravar.png"); } else { scr = Url.Content("~/Content/images/buttons/gravar_false.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.Cancelar)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/cancelar.png"); } else { scr = Url.Content("~/Content/images/buttons/cancelar_false.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.Voltar)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/voltar.png"); } else { scr = Url.Content("~/Content/images/buttons/voltar_false.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.AddItemPedido)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/procurar_pasta.png"); } else { scr = Url.Content("~/Content/images/buttons/procurar_pasta.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.Excel)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/excel_32x32.png"); } else { scr = Url.Content("~/Content/images/buttons/excel_16x16.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.FinalizarPedido)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/fechar_pedido_32x32.png"); } else { scr = Url.Content("~/Content/images/buttons/fechar_pedido_32x32.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.CancelarPedido)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/cancelar_pedido_32x32.png"); } else { scr = Url.Content("~/Content/images/buttons/cancelar_pedido_32x32.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.Separador)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/separador.png"); } else { scr = Url.Content("~/Content/images/buttons/separador.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.EfetivarEstoque)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/efetivar.png"); } else { scr = Url.Content("~/Content/images/buttons/efetivar.png"); }
            }

            if (m.Button == ProjectMaster.Core.ToolBarButtonType.ShowEstoqueHistorico)
            {
                if (m.Enable) { scr = Url.Content("~/Content/images/buttons/agenda.png"); } else { scr = Url.Content("~/Content/images/buttons/agenda.png"); }
            }

            if (string.IsNullOrEmpty(m.Href))
            {
                <img alt="@m.Alt" title="@m.Title" class="bt" @(m.Enable == true ? (string.IsNullOrEmpty(m.OnClick) ? "" : "onclick=" + m.OnClick + "") : "") src="@scr" />
            }
            else
            {
                if (m.Enable)
                {
        <a href="@m.Href">
            <img alt="@m.Alt" title="@m.Title" class="bt" @(m.Enable == true ? (string.IsNullOrEmpty(m.OnClick) ? "" : "onclick=" + m.OnClick + "") : "") src="@scr" />
        </a>
                }
                else
                {
        <img alt="@m.Alt" title="@m.Title" class="bt" @(m.Enable == true ? (string.IsNullOrEmpty(m.OnClick) ? "" : "onclick=" + m.OnClick + "") : "") src="@scr" />
                }
            }
        }
    }
</div>
