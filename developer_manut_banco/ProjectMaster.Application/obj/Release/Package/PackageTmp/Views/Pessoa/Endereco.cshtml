                                '' +
                                '        <span id="tx_dm_tipo_endereco' + row_num + '">' + $('select[name="cp_dm_tipo_endereco"] option:selected').text() + '</span>' +
                                '</td>' +
                                '<td>' +
                                '	<spant id="tx_nr_cep' + row_num + '">' + $("#cp_nr_cep").val() + '</span>' +
